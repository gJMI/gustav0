import DS from 'ember-data';

export default DS.JSONAPISerializer.extend({
    normalizeResponse(store, type, payload) {
        return {
            data: {
                id: payload.collection.id,
                type: type.modelName,
                attributes: {
                    amount: payload.collection.amount,
                    transferDate: payload.collection.transferDate,
                    sender: payload.collection.sender,
                    receiver: payload.collection.receiver,
                    receiverName: payload.collection.receiverName,
                    senderName: payload.collection.senderName,
                    reference: payload.collection.reference,
                    constantSymbol: payload.collection.constantSymbol,
                    variableSymbol: payload.collection.variableSymbol,
                    specificSymbol: payload.collection.specificSymbol,
                    dueDate: payload.collection.dueDate,
                    bookingTypeTranslation: payload.collection.bookingTypeTranslation
            }
        }
    };
}});