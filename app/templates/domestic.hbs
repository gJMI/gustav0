<div class="w3-container w3-blue">
    <h2>Domestic payment</h2>
</div>
<form {{action "sendDomestic" model on="submit" }}>
    <p><label>Sender account</label><div class="w3-red">{{errors.senderAccount}}</div>{{input type="senderAccount" class="w3-input" id="senderAccount" value=model.senderAccount}}</p>
    <p><label>Sender bankcode</label>{{input type="text" class="w3-input" id="senderBankCode" value=model.senderBankCode}}</p>
    <p><label>Receiver account</label><div class="w3-red">{{errors.mod11}}</div>{{input type="mod11" class="w3-input" id="receiverAccount" value=model.receiverAccount}}</p>
    <p><label>Receiver bankcode</label> {{input type="text" class="w3-input" id="receiverBankCode" value=model.receiverBankCode}}</p>
    <p><label>Transfer date</label> {{input type="date" class="w3-input" id="transferDate" value=model.transferDate}}</p>
    <p><label>Amount</label> {{input type="text" class="w3-input" id="amount" value=model.amount}}</p>
    <button type=submit class="w3-btn w3-blue">Send</button>
    {{#each post.errors.title as |error|}}
  <div class="error">ERROR: {{error.message}}</div>
{{/each}}  
</form>

{{outlet}}